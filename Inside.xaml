<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormMobile.Inside"
             Appearing="ContentPage_Appearing">
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="#CCC">
            <Label Text="Vítej!" HorizontalOptions="CenterAndExpand"
                   Padding="7" TextColor="Black" FontSize="Title"/>

            <Label Text="{Binding Username}" HorizontalOptions="CenterAndExpand"
                   Padding="7" TextColor="Black" FontSize="Subtitle"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>